
<div class="loginBox">
	
	<div class="loginHeader">
		<h1 class="loginTitle">Sign in</h1>
	</div>
	<br/>
	<span class="signInHr"><hr/></span>
	<div class="loginContent">
		<% if params[:user] %>
			<div class="loginError" id="loginError">Incorrect Email or Password</div>
		<% end %>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="loginContent2">
			<div class="loginField">
			  <%= f.label :email %><br/>
			  <%= f.email_field :email%>
			</div>
			<br/><br/>

			<div class="loginField">
			 <%= f.label :password %><br/>
			 <%= f.password_field :password %>
			</div>
			<br/><br/><br/>
			
			<%= devise_error_messages! %>
			
			<div class="loginSubmit"><%= f.submit "Sign In", :class => " btn2 primary" %></div>
            <div class="loginSubmit right"><a href="/users/sign_up" class=" btn2 primary" style="text-decoration: none;font-size: 14px;">Sign Up</a></div>
			<br/>
			<% end %>
		</div>
	</div>
</div>

<script>
    $(function(){
        $("input[type='password']").keypress(function(event){
           if(isCapslock(event)){
               $(this).addClass("showPassword");
           } else {
               $(this).removeClass("showPassword");
           }
        });
        
        $("input[type='password']").keydown(function(event){
            if (event.keyCode == 20){                
                $(this).toggleClass("showPassword");
            }           
        });
        
        $("input[type='password']").blur(function(){
            $(this).removeClass("showPassword");
        });
    });
    
    function isCapslock(e){
        e = (e) ? e : window.event;

        var charCode = false;
        if (e.which) {
            charCode = e.which;
        } else if (e.keyCode) {
            charCode = e.keyCode;
            
        }

        var shifton = false;
        if (e.shiftKey) {            
            shifton = e.shiftKey;
        } else if (e.modifiers) {            
            shifton = !!(e.modifiers & 4);
        }

        if (charCode >= 97 && charCode <= 122 && shifton) {
            return true;
        }

        if (charCode >= 65 && charCode <= 90 && !shifton) {
            
            return true;
        }
        
        return false;

    }    
    
    function isCapslock2(e){
        e = (e) ? e : window.event;

        var charCode = false;
        if (e.which) {
            charCode = e.which;
        } else if (e.keyCode) {
            charCode = e.keyCode;
            
        }

        return charCode;

    }
</script>


