<% member.current_model = model %>
<div class='circle' id='member_<%= member.id %>'>
	<div class='outer-circle'></div>
	<div class='middle-circle'>
		<div class='action-circle flash' title='Remove' onclick='removeMember(event.target);' style='margin-left:51px;margin-top:4px;'>
			<span class='content'>-</span>
		</div>
		<div class='action-circle flash' title='Add' onclick='addMember(event.target);' style='margin-left:51px;margin-top:98px;'>
			<span class='content'>+</span>
		</div>
		<div class='action-circle flash' title='Edit' onclick='editMember(event.target);' style='margin-left:4px;margin-top:51px;'>
			<span class='content'>!</span>
		</div>
		<div class='action-circle flash' title='Show' onclick='showMember(<%= member.id %>);' style='margin-left:98px;margin-top:51px;'>
			<span class='content'>?</span>
		</div>
	</div>
	<div class='inner-circle'>
		<div class='content'>&nbsp;</div>
		<div class='content'>
			<span class='member'><%= member.name %></span>
			<span class='points'><%= member.points %></span>
		</div>
	</div>
	<div class='data' style='display:none;'>
		<input name='members[<%= member.id %>][id]' value='<%= member.id %>' class='id' />
		<input name='members[<%= member.id %>][parent_id]' value='<%= member.parent_id %>' class='parent_id' />
		<input name='members[<%= member.id %>][code]' value='<%= member.code %>' class='code' />
		<input name='members[<%= member.id %>][member_model][points]' value='<%= member.points %>' class='points' />
		<input name='members[<%= member.id %>][person][name]' value='<%= member.person.name %>' class='name' />
		<input name='members[<%= member.id %>][person][last_name]' value='<%= member.person.last_name %>' class='last_name' />
	</div>
	<div id="compute_<%= member.id %>" title="<%= member.code %> - <%= member.person.name %> <%= member.person.last_name %>" class="compute">
		<fieldset>
			<div class="field">
				<label><%= number_to_currency(member.bv, :precision => 2) %></label>
				<b>BV</b>
			</div>
			<div class="field">
				<label><%= number_to_currency(member.group_bv, :precision => 2) %></label>
				<b>Group BV</b>
			</div>
			<div class="field">
				<label><%= number_to_currency(member.pv, :precision => 0, :format => "%n") %></label>
				<b>PV</b>
			</div>
			<div class="field">
				<label><%= member.bonus %>%</label>
				<b>Bonus</b>
			</div>
			<div class="field">
				<label><%= member.ibo_profit %>%</label>
				<b>IBO Profit</b>
			</div>
			<hr>
			<div class="field">
				<label><%= number_to_currency(member.sales_profit, :precision => 2) %></label>
				<b>Sales Profit</b>
			</div>
			<div class="field">
				<label><%= number_to_currency(member.bonus_total, :precision => 2) %></label>
				<b>Bonus Total</b>
			</div>
			<hr>
			<div class="field">
				<label><%= number_to_currency(member.total, :precision => 2) %></label>
				<b>Total</b>
			</div>
		</fieldset>
	</div>
</div>